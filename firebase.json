{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "errorPages": [
      {
        "responseCode": "NotFound",
        "file": "build/index.html"
      }
    ]
  }
}
